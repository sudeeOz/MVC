@model TestOBS.Models.Student

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil Bilgilerim</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 2rem 0;
        }
        
        .profile-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 25px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            padding: 3rem;
            margin: 2rem auto;
            max-width: 800px;
            position: relative;
            overflow: hidden;
        }
        
        .profile-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: linear-gradient(90deg, #667eea, #764ba2);
        }
        
        .profile-header {
            text-align: center;
            margin-bottom: 3rem;
            position: relative;
        }
        
        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
            color: white;
            font-size: 3rem;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
            position: relative;
        }
        
        .profile-avatar::after {
            content: '';
            position: absolute;
            inset: -4px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            z-index: -1;
            opacity: 0.3;
        }
        
        .profile-title {
            color: #2c3e50;
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, #2c3e50, #667eea);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .profile-subtitle {
            color: #7f8c8d;
            font-size: 1.1rem;
            font-weight: 500;
        }
        
        .info-section {
            background: linear-gradient(145deg, #f8f9fa, #ffffff);
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.8);
        }
        
        .section-title {
            color: #2c3e50;
            font-weight: 600;
            font-size: 1.3rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .section-icon {
            width: 40px;
            height: 40px;
            border-radius: 12px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.1rem;
        }
        
        .info-grid {
            display: grid;
            gap: 1.5rem;
        }
        
        .info-item {
            display: flex;
            align-items: center;
            padding: 1rem;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.7);
            border: 1px solid rgba(102, 126, 234, 0.1);
            transition: all 0.3s ease;
        }
        
        .info-item:hover {
            transform: translateX(5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            border-color: rgba(102, 126, 234, 0.3);
        }
        
        .info-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            font-size: 1.2rem;
            flex-shrink: 0;
        }
        
        .info-icon.name { background: #ffeaa7; color: #d63031; }
        .info-icon.surname { background: #fab1a0; color: #e17055; }
        .info-icon.email { background: #74b9ff; color: #0984e3; }
        
        .info-content {
            flex: 1;
        }
        
        .info-label {
            font-size: 0.85rem;
            color: #7f8c8d;
            font-weight: 500;
            margin-bottom: 0.2rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .info-value {
            font-weight: 600;
            color: #2c3e50;
            font-size: 1.1rem;
        }
        
        .lessons-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
            margin-top: 1rem;
        }
        
        .lesson-card {
            background: linear-gradient(135deg, #ffffff, #f8f9fa);
            border-radius: 15px;
            padding: 1.5rem;
            border: 2px solid rgba(102, 126, 234, 0.1);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .lesson-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #00b894, #00cec9);
        }
        
        .lesson-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 184, 148, 0.2);
            border-color: rgba(0, 184, 148, 0.3);
        }
        
        .lesson-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: linear-gradient(135deg, #00b894, #00cec9);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }
        
        .lesson-name {
            font-weight: 600;
            color: #2c3e50;
            font-size: 1.1rem;
            line-height: 1.3;
        }
        
        .no-lessons {
            text-align: center;
            padding: 3rem 2rem;
            color: #7f8c8d;
        }
        
        .no-lessons-icon {
            font-size: 4rem;
            color: #ddd;
            margin-bottom: 1rem;
        }
        
        .no-lessons-text {
            font-size: 1.1rem;
            font-weight: 500;
        }
        
        .lessons-count {
            display: inline-flex;
            align-items: center;
            background: linear-gradient(135deg, #00b894, #00cec9);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            margin-left: 1rem;
        }
        
        .divider {
            height: 2px;
            background: linear-gradient(90deg, transparent, #667eea, transparent);
            margin: 2rem 0;
            border-radius: 1px;
        }
        
        @@media (max-width: 768px) {
            .profile-container {
                margin: 1rem;
                padding: 2rem;
            }
            
            .profile-avatar {
                width: 100px;
                height: 100px;
                font-size: 2.5rem;
            }
            
            .profile-title {
                font-size: 1.6rem;
            }
            
            .info-section {
                padding: 1.5rem;
            }
            
            .lessons-grid {
                grid-template-columns: 1fr;
            }
            
            .info-item {
                flex-direction: column;
                text-align: center;
                gap: 1rem;
            }
            
            .info-item:hover {
                transform: translateY(-3px);
            }
            
            .info-icon {
                margin-right: 0;
            }
        }
        
        @@media (max-width: 480px) {
            .profile-container {
                padding: 1.5rem;
            }
            
            .info-section {
                padding: 1rem;
            }
            
            .lesson-card {
                padding: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="profile-container">
            <!-- Profil Header -->
            <div class="profile-header">
                <div class="profile-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <h1 class="profile-title">Profil Bilgileriniz</h1>
                <p class="profile-subtitle">Kişisel bilgilerinizi ve derslerinizi görüntüleyin</p>
            </div>

            <!-- Kişisel Bilgiler Bölümü -->
            <div class="info-section">
                <h2 class="section-title">
                    <div class="section-icon">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    Kişisel Bilgiler
                </h2>
                
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-icon name">
                            <i class="fas fa-signature"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Ad</div>
                            <div class="info-value">@Model.FirstName</div>
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <div class="info-icon surname">
                            <i class="fas fa-id-card"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Soyad</div>
                            <div class="info-value">@Model.LastName</div>
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <div class="info-icon email">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Email</div>
                            <div class="info-value">@Model.Email</div>
                        </div>
                    </div>

                      <div class="info-item">
                        <div class="info-icon email">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Bölümü</div>
                            <div class="info-value">@Model.Department</div>
                        </div>
                    </div>
                      <div class="info-item">
                        <div class="info-icon email">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Sınıfı</div>
                            <div class="info-value">@Model.Grade</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="divider"></div>

            <!-- Dersler Bölümü -->
            <div class="info-section">
                <h2 class="section-title">
                    <div class="section-icon">
                        <i class="fas fa-book-open"></i>
                    </div>
                    Dersleriniz
                    @if (Model.Lessons != null && Model.Lessons.Any())
                    {
                        <span class="lessons-count">
                            <i class="fas fa-graduation-cap me-1"></i>
                            @Model.Lessons.Count() Ders
                        </span>
                    }
                </h2>
                
                @if (Model.Lessons != null && Model.Lessons.Any())
                {
                    <div class="lessons-grid">
                        @foreach (var lesson in Model.Lessons)
                        {
                            <div class="lesson-card">
                                <div class="lesson-icon">
                                    <i class="fas fa-book"></i>
                                </div>
                                <div class="lesson-name">@lesson.Name</div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="no-lessons">
                        <div class="no-lessons-icon">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <div class="no-lessons-text">Henüz dersiniz bulunmamaktadır.</div>
                        <small class="text-muted mt-2 d-block">Dersleriniz atandığında burada görünecektir.</small>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>