@model List<TestOBS.Models.Lesson>

<style>
    /* Animasyonlar */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-50px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }
    }

    @@keyframes shimmer {
        0% {
            background-position: -468px 0;
        }

        100% {
            background-position: 468px 0;
        }
    }

    /* Ana container */
    .lesson-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
        animation: fadeInUp 0.8s ease-out;
    }

    .lesson-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin: 1rem;
        animation: slideInLeft 1s ease-out 0.2s both;
    }

    .page-title {
        color: #2c3e50;
        font-weight: 700;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        animation: fadeInUp 1s ease-out 0.4s both;
    }

    .page-description {
        color: #5a6c7d;
        font-size: 1.2rem;
        margin-bottom: 2rem;
        animation: fadeInUp 1s ease-out 0.6s both;
    }

    .student-info {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        text-align: center;
        animation: fadeInUp 1s ease-out 0.5s both;
    }

    .student-name {
        color: #1565c0;
        font-weight: 600;
        font-size: 1.3rem;
        margin-bottom: 0.5rem;
    }

    .student-department {
        color: #1976d2;
        font-size: 1rem;
        font-weight: 500;
    }

    .lesson-list-title {
        color: #34495e;
        font-weight: 600;
        margin-bottom: 1.5rem;
        position: relative;
        animation: fadeInUp 1s ease-out 0.8s both;
    }

    .lesson-list-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 3px;
        background: linear-gradient(90deg, #667eea, #764ba2);
        border-radius: 2px;
    }

    /* Ders listesi */
    .lesson-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .lesson-item {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border: 2px solid transparent;
        border-radius: 15px;
        padding: 1.5rem;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        position: relative;
        overflow: hidden;
        cursor: pointer;
        animation: fadeInUp 1s ease-out calc(1s + var(--delay)) both;
    }

    .lesson-item input[type="checkbox"] {
        position: absolute;
        opacity: 0;
        width: 0;
        height: 0;
    }

    .lesson-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
        transition: left 0.5s;
    }

    .lesson-item:hover::before {
        left: 100%;
    }

    .lesson-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    }

    .lesson-item.selected {
        border-color: #667eea;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(102, 126, 234, 0.3);
    }

    .lesson-item.selected .lesson-name {
        color: white;
    }

    .lesson-item.selected .lesson-teacher {
        color: rgba(255, 255, 255, 0.9);
    }

    .lesson-item.selected .lesson-credit,
    .lesson-item.selected .lesson-code {
        color: rgba(255, 255, 255, 0.8);
    }

    .lesson-info {
        position: relative;
        z-index: 2;
        text-align: center;
    }

    .lesson-name {
        font-size: 1.3rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.8rem;
        line-height: 1.4;
    }

    .lesson-code {
        font-size: 0.85rem;
        color: #6c757d;
        font-weight: 600;
        background: rgba(108, 117, 125, 0.1);
        padding: 0.3rem 0.8rem;
        border-radius: 15px;
        display: inline-block;
        margin-bottom: 0.8rem;
        letter-spacing: 1px;
    }

    .lesson-teacher {
        font-size: 1rem;
        color: #495057;
        font-weight: 500;
        background: rgba(103, 126, 234, 0.1);
        padding: 0.4rem 1rem;
        border-radius: 20px;
        display: inline-block;
        margin-bottom: 0.8rem;
    }

    .lesson-teacher::before {
        content: 'üë®‚Äçüè´ ';
        margin-right: 0.5rem;
    }

    .lesson-credit {
        font-size: 0.8rem;
        color: #6c757d;
        font-weight: 500;
        background: rgba(40, 167, 69, 0.1);
        color: #28a745;
        padding: 0.3rem 0.8rem;
        border-radius: 12px;
        display: inline-block;
    }

    .lesson-item.selected .lesson-teacher {
        background: rgba(255, 255, 255, 0.2);
    }

    .lesson-item.selected .lesson-credit {
        background: rgba(255, 255, 255, 0.15);
        color: rgba(255, 255, 255, 0.9);
    }

    .lesson-item.selected .lesson-code {
        background: rgba(255, 255, 255, 0.15);
    }

    /* Se√ßim g√∂stergesi */
    .selection-indicator {
        position: absolute;
        top: 15px;
        right: 15px;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: #28a745;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        opacity: 0;
        transform: scale(0);
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
    }

    .lesson-item.selected .selection-indicator {
        opacity: 1;
        transform: scale(1);
    }

    /* Kayƒ±t yaptƒ±r butonu */
    .register-btn {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
        border-radius: 50px;
        padding: 1rem 3rem;
        color: white;
        font-size: 1.2rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        box-shadow: 0 10px 20px rgba(40, 167, 69, 0.3);
        position: relative;
        overflow: hidden;
        animation: fadeInUp 1s ease-out 1.4s both;
        opacity: 0.5;
        cursor: not-allowed;
    }

    .register-btn.active {
        opacity: 1;
        cursor: pointer;
    }

    .register-btn.active::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .register-btn.active:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 30px rgba(40, 167, 69, 0.4);
        animation: pulse 2s infinite;
    }

    .register-btn.active:hover::before {
        left: 100%;
    }

    .register-btn:active {
        transform: translateY(-1px);
    }

    /* Se√ßilen dersler g√∂stergesi */
    .selected-count {
        background: linear-gradient(135deg, #17a2b8 0%, #20c997 100%);
        color: white;
        padding: 0.8rem 1.5rem;
        border-radius: 25px;
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        display: inline-block;
        animation: fadeInUp 0.5s ease-out;
        box-shadow: 0 5px 15px rgba(23, 162, 184, 0.3);
    }

    /* Bo≈ü ders listesi durumu */
    .no-lessons {
        text-align: center;
        color: #6c757d;
        font-size: 1.2rem;
        margin: 3rem 0;
        padding: 3rem 2rem;
        background: rgba(108, 117, 125, 0.05);
        border-radius: 20px;
        border: 2px dashed #adb5bd;
    }

    .no-lessons i {
        font-size: 4rem;
        margin-bottom: 1.5rem;
        color: #adb5bd;
    }

    .no-lessons h3 {
        color: #495057;
        margin-bottom: 1rem;
    }

    /* Geri d√∂n butonu */
    .back-btn {
        background: rgba(108, 117, 125, 0.1);
        color: #6c757d;
        border: 2px solid #dee2e6;
        border-radius: 25px;
        padding: 0.8rem 1.5rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .back-btn:hover {
        background: #6c757d;
        color: white;
        text-decoration: none;
        transform: translateY(-2px);
    }

    /* Responsive tasarƒ±m */
    @@media (max-width: 768px) {
        .lesson-container {
            padding: 1rem;
        }

        .lesson-card {
            margin: 0.5rem;
            padding: 1.5rem;
        }

        .page-title {
            font-size: 2rem;
        }

        .page-description {
            font-size: 1rem;
        }

        .lesson-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .lesson-item {
            padding: 1.2rem;
        }

        .lesson-name {
            font-size: 1.1rem;
        }

        .register-btn {
            padding: 0.8rem 2rem;
            font-size: 1rem;
        }

        .student-info {
            padding: 1rem;
        }

        .student-name {
            font-size: 1.1rem;
        }
    }

    @@media (max-width: 480px) {
        .page-title {
            font-size: 1.8rem;
        }

        .lesson-card {
            padding: 1rem;
        }

        .register-btn {
            width: 100%;
            padding: 1rem;
        }

        .lesson-item {
            padding: 1rem;
        }

        .lesson-teacher {
            font-size: 0.9rem;
        }
    }
</style>

<div class="lesson-container">
    <div class="container">
        <div class="lesson-card">
            <div class="text-center mb-4">
                <a href="@Url.Action("Dashboard", "Student")" class="back-btn">
                    <i class="fas fa-arrow-left"></i>
                    Geri D√∂n
                </a>
            </div>

            <h1 class="page-title text-center">Ders Kayƒ±t Sayfasƒ±</h1>

            <p class="page-description text-center">
                B√∂l√ºm√ºn√ºze ait dersleri se√ßin ve kayƒ±t yaptƒ±rƒ±n.
            </p>

            <!-- √ñƒürenci bilgileri -->
            <div class="student-info">
                <div class="student-name">
                    <i class="fas fa-user-graduate me-2"></i>
                    @ViewBag.StudentName
                </div>
                <div class="student-department">
                    <i class="fas fa-university me-2"></i>
                    @ViewBag.StudentDepartment B√∂l√ºm√º - @ViewBag.StudentGrade. Sƒ±nƒ±f
                </div>
            </div>

            <h2 class="lesson-list-title text-center">
                @ViewBag.StudentDepartment B√∂l√ºm√º Dersleri
            </h2>

            @if (Model != null && Model.Any())
            {
                <form asp-action="TakeLesson" asp-controller="Student" method="post" id="lessonForm">
                    <input type="hidden" name="StudentId" value="@ViewBag.StudentId" />
                    @Html.AntiForgeryToken()

                    <div class="lesson-grid">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var lesson = Model[i];
                            var delay = i * 0.1;

                            <label class="lesson-item" style="--delay: @(delay)s" for="lesson@(lesson.Id)">
                                <input type="checkbox" name="selectedLessons" value="@lesson.Id" id="lesson@(lesson.Id)">
                                <div class="lesson-info">
                                    <div class="lesson-code">@lesson.Id</div>
                                    <h3 class="lesson-name">@lesson.Name</h3>
                                    <div class="lesson-teacher">@lesson.TeacherId</div>
                                    <div class="lesson-credit">
                                        <i class="fas fa-star me-1"></i>
                                        @lesson.Credit Kredi
                                    </div>
                                </div>
                                <div class="selection-indicator">
                                    <i class="fas fa-check"></i>
                                </div>
                            </label>
                        }
                    </div>

                    <div class="text-center">
                        <div id="selectedCount" class="selected-count" style="display: none;">
                            <i class="fas fa-clipboard-list me-2"></i>
                            <span id="countText">0</span> ders se√ßildi
                        </div>
                        <br>
                        <button type="submit" id="registerBtn" class="register-btn">
                            <i class="fas fa-graduation-cap me-2"></i>
                            Derslere Kayƒ±t Ol
                        </button>
                    </div>
                </form>
            }
            else
            {
                <div class="no-lessons">
                    <i class="fas fa-book-open"></i>
                    <h3>B√∂l√ºm√ºn√ºze Ait A√ßƒ±k Ders Bulunmuyor</h3>
                    <p>@ViewBag.StudentDepartment b√∂l√ºm√º i√ßin ≈üu anda alƒ±nabilecek ders bulunmamaktadƒ±r.</p>
                    <p>L√ºtfen daha sonra tekrar kontrol ediniz.</p>
                </div>
            }

            <div class="text-center mt-4">
                <small class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    Sadece kendi b√∂l√ºm√ºn√ºze ait dersler g√∂r√ºnt√ºlenmektedir.
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome i√ßin CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const checkboxes = document.querySelectorAll('input[type="checkbox"][name="selectedLessons"]');
        const registerBtn = document.getElementById('registerBtn');
        const selectedCount = document.getElementById('selectedCount');
        const countText = document.getElementById('countText');
        const lessonForm = document.getElementById('lessonForm');

        function updateSelection() {
            const checkedCount = document.querySelectorAll('input[type="checkbox"][name="selectedLessons"]:checked').length;

            if (checkedCount > 0) {
                registerBtn.classList.add('active');
                selectedCount.style.display = 'inline-block';
                countText.textContent = checkedCount;
            } else {
                registerBtn.classList.remove('active');
                selectedCount.style.display = 'none';
            }
        }

        checkboxes.forEach(function (checkbox) {
            checkbox.addEventListener('change', function () {
                const lessonItem = this.closest('.lesson-item');
                if (this.checked) {
                    lessonItem.classList.add('selected');
                } else {
                    lessonItem.classList.remove('selected');
                }
                updateSelection();
            });
        });

        // Form submit kontrol√º
        if (lessonForm) {
            lessonForm.addEventListener('submit', function (e) {
                const checkedCount = document.querySelectorAll('input[type="checkbox"][name="selectedLessons"]:checked').length;

                if (checkedCount === 0) {
                    e.preventDefault();
                    alert('L√ºtfen en az bir ders se√ßiniz!');
                    return false;
                }

                if (confirm(`${checkedCount} ders i√ßin kayƒ±t yaptƒ±rƒ±lacak. Onaylƒ±yor musunuz?`)) {
                    // Buton metnini deƒüi≈ütir ve devre dƒ±≈üƒ± bƒ±rak
                    registerBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Kaydediliyor...';
                    registerBtn.disabled = true;
                    return true;
                } else {
                    e.preventDefault();
                    return false;
                }
            });
        }

        // Sayfa y√ºklendiƒüinde animasyon gecikmelerini ayarla
        const lessonItems = document.querySelectorAll('.lesson-item');
        lessonItems.forEach((item, index) => {
            item.style.animationDelay = `${1 + (index * 0.1)}s`;
        });
    });
</script>