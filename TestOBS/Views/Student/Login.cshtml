@model TestOBS.Models.Student

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini OBS - Öğrenci Giriş</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --student-primary: #45b7d1;
            --student-secondary: #96c93d;
            --student-gradient: linear-gradient(135deg, #45b7d1, #96c93d);
            --primary-color: #667eea;
            --secondary-color: #764ba2;
            --text-dark: #2d3748;
            --text-light: #718096;
            --card-shadow: 0 15px 35px rgba(0,0,0,0.1);
            --hover-transform: translateY(-3px);
            --success-color: #48bb78;
            --error-color: #f56565;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            flex-direction: column;
            overflow-x: hidden;
        }

        .animated-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .floating-element {
            position: absolute;
            opacity: 0.1;
            animation: float 8s ease-in-out infinite;
        }

        .floating-element:nth-child(1) {
            top: 15%;
            left: 10%;
            animation-delay: 0s;
        }

        .floating-element:nth-child(2) {
            top: 60%;
            right: 15%;
            animation-delay: 3s;
        }

        .floating-element:nth-child(3) {
            top: 30%;
            left: 75%;
            animation-delay: 6s;
        }

        @@keyframes float {
            0%, 100% { 
                transform: translateY(0px) rotate(0deg); 
                opacity: 0.08;
            }
            50% { 
                transform: translateY(-30px) rotate(180deg); 
                opacity: 0.15;
            }
        }

        .container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
        }

        .back-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(255, 255, 255, 0.9);
            border: none;
            border-radius: 50px;
            padding: 12px 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            color: var(--text-dark);
            font-weight: 500;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            backdrop-filter: blur(10px);
        }

        .back-btn:hover {
            background: white;
            transform: var(--hover-transform);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .login-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border-radius: 25px;
            box-shadow: var(--card-shadow);
            padding: 3rem 2.5rem;
            max-width: 450px;
            width: 100%;
            text-align: center;
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .login-container::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: var(--student-gradient);
            border-radius: 25px;
            z-index: -1;
            opacity: 0.1;
            animation: borderGlow 3s ease-in-out infinite alternate;
        }

        @@keyframes borderGlow {
            0% { opacity: 0.1; }
            100% { opacity: 0.2; }
        }

        .student-header {
            margin-bottom: 2.5rem;
        }

        .student-icon {
            font-size: 4rem;
            color: var(--student-primary);
            margin-bottom: 1rem;
            animation: iconPulse 2s ease-in-out infinite;
        }

        @@keyframes iconPulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .student-title {
            font-size: 2.2rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
            background: var(--student-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .student-subtitle {
            color: var(--text-light);
            font-size: 1rem;
            font-weight: 500;
        }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
            text-align: left;
        }

        .form-label {
            display: block;
            color: var(--text-dark);
            font-weight: 600;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .form-input {
            width: 100%;
            padding: 1rem 1.2rem;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
            color: var(--text-dark);
            position: relative;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--student-primary);
            box-shadow: 0 0 0 3px rgba(69, 183, 209, 0.1);
            transform: translateY(-2px);
        }

        .form-input:valid {
            border-color: var(--success-color);
        }

        .input-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
            transition: color 0.3s ease;
        }

        .form-input:focus + .input-icon {
            color: var(--student-primary);
        }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: var(--text-light);
            font-size: 1.1rem;
            transition: color 0.3s ease;
        }

        .password-toggle:hover {
            color: var(--student-primary);
        }

        .login-btn {
            width: 100%;
            background: var(--student-gradient);
            color: white;
            border: none;
            padding: 1rem;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: 0 8px 25px rgba(69, 183, 209, 0.3);
            position: relative;
            overflow: hidden;
            margin-top: 1rem;
        }

        .login-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.6s;
        }

        .login-btn:hover::before {
            left: 100%;
        }

        .login-btn:hover {
            transform: var(--hover-transform);
            box-shadow: 0 12px 35px rgba(69, 183, 209, 0.4);
        }

        .login-btn:active {
            transform: translateY(0);
        }

        .login-btn:disabled {
            background: #cbd5e0;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .remember-section {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin: 1.5rem 0;
            font-size: 0.9rem;
        }

        .remember-checkbox {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .remember-checkbox input[type="checkbox"] {
            width: 18px;
            height: 18px;
            accent-color: var(--student-primary);
            cursor: pointer;
        }

        .forgot-link {
            color: var(--student-primary);
            text-decoration: none;
            font-weight: 500;
            transition: opacity 0.3s ease;
        }

        .forgot-link:hover {
            opacity: 0.7;
        }

        .error-message {
            background: rgba(245, 101, 101, 0.1);
            border: 1px solid rgba(245, 101, 101, 0.3);
            color: var(--error-color);
            padding: 0.8rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            font-size: 0.9rem;
            text-align: center;
        }

        .success-message {
            background: rgba(72, 187, 120, 0.1);
            border: 1px solid rgba(72, 187, 120, 0.3);
            color: var(--success-color);
            padding: 0.8rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            font-size: 0.9rem;
            text-align: center;
        }

        .validation-summary {
            background: rgba(245, 101, 101, 0.1);
            border: 1px solid rgba(245, 101, 101, 0.3);
            color: var(--error-color);
            padding: 0.8rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            font-size: 0.9rem;
            text-align: left;
        }

        .validation-summary ul {
            margin: 0;
            padding-left: 1.2rem;
        }

        .validation-summary li {
            margin-bottom: 0.3rem;
        }

        .field-validation-error {
            color: var(--error-color);
            font-size: 0.8rem;
            margin-top: 0.3rem;
            display: block;
        }

        .input-validation-error {
            border-color: var(--error-color) !important;
        }

        .security-info {
            background: rgba(102, 126, 234, 0.1);
            border: 1px solid rgba(102, 126, 234, 0.2);
            border-radius: 10px;
            padding: 1rem;
            margin-top: 1.5rem;
            font-size: 0.85rem;
            color: var(--text-light);
            text-align: center;
        }

        .security-icon {
            color: var(--primary-color);
            margin-right: 0.5rem;
        }

        .footer {
            text-align: center;
            padding: 20px;
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.9rem;
        }

        @@media (max-width: 768px) {
            .login-container {
                padding: 2rem 1.5rem;
                margin: 10px;
                max-width: 95%;
            }

            .student-title {
                font-size: 1.8rem;
            }

            .student-icon {
                font-size: 3rem;
            }

            .back-btn {
                top: 10px;
                left: 10px;
                padding: 10px 15px;
                font-size: 0.9rem;
            }
        }

        @@media (max-width: 480px) {
            .remember-section {
                flex-direction: column;
                gap: 1rem;
                align-items: stretch;
            }

            .form-input {
                padding: 0.9rem 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="animated-bg">
        <div class="floating-element">
            <i class="fas fa-book" style="font-size: 4rem;"></i>
        </div>
        <div class="floating-element">
            <i class="fas fa-graduation-cap" style="font-size: 3rem;"></i>
        </div>
        <div class="floating-element">
            <i class="fas fa-pencil-alt" style="font-size: 3.5rem;"></i>
        </div>
    </div>

    <div class="container">
        <a href="@Url.Action("Index", "Home")" class="back-btn">
            <i class="fas fa-arrow-left"></i> Geri
        </a>

        <div class="login-container">
            <div class="student-header">
                <div class="student-icon">
                    <i class="fas fa-user-graduate"></i>
                </div>
                <h1 class="student-title">Öğrenci Girişi</h1>
                <p class="student-subtitle">Öğrenci paneline erişim için giriş yapın</p>
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="error-message">
                    <i class="fas fa-exclamation-triangle"></i>
                    @ViewBag.ErrorMessage
                </div>
            }

            @if (ViewBag.SuccessMessage != null)
            {
                <div class="success-message">
                    <i class="fas fa-check-circle"></i>
                    @ViewBag.SuccessMessage
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="validation-summary">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Lütfen aşağıdaki hataları düzeltin:</strong>
                </div>
            }

            <form asp-action="Login" asp-controller="Student" method="post" novalidate>
                @Html.AntiForgeryToken()
                
                <div class="form-group">
                    <label asp-for="Id" class="form-label">
                        <i class="fas fa-id-card"></i> Öğrenci Numarası
                    </label>
                    <div style="position: relative;">
                        <input asp-for="Id" 
                               class="form-input" 
                               placeholder="Öğrenci numaranızı giriniz"
                               autocomplete="username">
                        <i class="fas fa-id-card input-icon"></i>
                    </div>
                    <span asp-validation-for="Id" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">
                        <i class="fas fa-lock"></i> Şifre
                    </label>
                    <div style="position: relative;">
                        <input asp-for="Password" 
                               type="password" 
                               class="form-input" 
                               placeholder="Şifrenizi giriniz"
                               autocomplete="current-password">
                        <button type="button" class="password-toggle" onclick="togglePassword()">
                            <i class="fas fa-eye" id="toggleIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>

                <div class="remember-section">
                    <div class="remember-checkbox">
                        <input type="checkbox" id="rememberMe" name="RememberMe" value="true">
                        <input type="hidden" name="RememberMe" value="false">
                        <label for="rememberMe">Beni hatırla</label>
                    </div>
                    <a href="#" class="forgot-link" onclick="showForgotPassword()">
                        Şifremi unuttum
                    </a>
                </div>

                <button type="submit" class="login-btn">
                    <i class="fas fa-sign-in-alt"></i>
                    Giriş Yap
                </button>
            </form>

            <div class="security-info">
                <i class="fas fa-graduation-cap security-icon"></i>
                Bu alan yalnızca kayıtlı öğrenciler içindir. Tüm giriş denemeleri kayıt altına alınmaktadır.
            </div>
        </div>
    </div>

    <footer class="footer">
        <p>&copy; 2025 Mini OBS - Öğrenci Bilgi Sistemi</p>
    </footer>

    <script>
        function togglePassword() {
            const passwordInput = document.querySelector('input[name="Password"]');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        function showForgotPassword() {
            alert('Şifre sıfırlama için öğrenci işleri ile iletişime geçiniz.\nİletişim: ogrenci@miniobs.edu.tr');
        }

        // Enter tuşu ile form gönderimi
        document.addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && e.target.tagName !== 'BUTTON') {
                const form = document.querySelector('form');
                const submitBtn = form.querySelector('button[type="submit"]');
                submitBtn.click();
            }
        });

        // Form gönderimi sırasında loading durumu
        document.querySelector('form').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Giriş yapılıyor...';
            
            // Hata durumunda butonu tekrar etkinleştir
            setTimeout(() => {
                if (document.querySelector('.error-message, .validation-summary')) {
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="fas fa-sign-in-alt"></i> Giriş Yap';
                }
            }, 100);
        });

        // Sayfa yüklendiğinde animasyon
        document.addEventListener('DOMContentLoaded', function() {
            const loginContainer = document.querySelector('.login-container');
            loginContainer.style.opacity = '0';
            loginContainer.style.transform = 'translateY(30px)';
            
            setTimeout(() => {
                loginContainer.style.transition = 'all 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
                loginContainer.style.opacity = '1';
                loginContainer.style.transform = 'translateY(0)';
            }, 200);
        });

        // Client-side validation styling
        document.addEventListener('DOMContentLoaded', function() {
            const inputs = document.querySelectorAll('.form-input');
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    if (this.hasAttribute('data-val-required') && !this.value.trim()) {
                        this.classList.add('input-validation-error');
                    } else {
                        this.classList.remove('input-validation-error');
                    }
                });

                input.addEventListener('input', function() {
                    if (this.classList.contains('input-validation-error') && this.value.trim()) {
                        this.classList.remove('input-validation-error');
                    }
                });
            });
        });
    </script>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>