@{
    Layout = null;
}
    <div class="container">
        <a href="javascript:history.back()" class="back-btn">
            <i class="fas fa-arrow-left"></i> Geri
        </a>

        <div class="register-container">
            <div class="register-header">
                <div class="register-icon">
                    <i class="fas fa-user-plus"></i>
                </div>
                <h1 class="register-title">Üye Ol</h1>
                <p class="register-subtitle">Mini OBS'ye kayıt olmak için bilgilerinizi giriniz</p>
            </div>

            <div class="info-message">
                <i class="fas fa-info-circle"></i>
                <span>ID numaranız sistem tarafından otomatik olarak oluşturulacaktır.</span>
            </div>

           @* Sunucu tarafı validasyon hatalarını göster *@
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error-message" style="display:block;">
            <i class="fas fa-exclamation-triangle"></i>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    }

            <div class="success-message" id="successMessage" style="display:none;">
                <i class="fas fa-check-circle"></i>
                Kayıt başarılı! Giriş sayfasına yönlendiriliyorsunuz...
            </div>

            <form id="registerForm" action="/Account/Signup" method="POST">
                @Html.AntiForgeryToken()
                <div class="form-row">
                    <div class="form-group">
                        <label for="firstName" class="form-label">
                            <i class="fas fa-user"></i> Ad <span class="required">*</span>
                        </label>
                        <div style="position: relative;">
                            <input type="text" 
                                   id="firstName" 
                                   name="FirstName" 
                                   class="form-input" 
                                   placeholder="Adınızı giriniz"
                                   required>
                            <i class="fas fa-user input-icon"></i>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="lastName" class="form-label">
                            <i class="fas fa-user"></i> Soyad <span class="required">*</span>
                        </label>
                        <div style="position: relative;">
                            <input type="text" 
                                   id="lastName" 
                                   name="LastName" 
                                   class="form-input" 
                                   placeholder="Soyadınızı giriniz"
                                   required>
                            <i class="fas fa-user input-icon"></i>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Id" class="form-label">
                        <i class="fas fa-id-badge"></i> ID Numaranız
                    </label>
                    <div style="position: relative;">
                        <input type="text" 
                               id="Id" 
                               name="Id" 
                               class="form-input" 
                               placeholder="Otomatik oluşturulacak..."
                               readonly
                               value="">
                        <i class="fas fa-id-badge input-icon"></i>
                    </div>
                </div>

                <div class="form-group">
                    <label for="email" class="form-label">
                        <i class="fa-solid fa-envelope"></i> Email <span class="required">*</span>
                    </label>
                    <div style="position: relative;">
                        <input type="email" 
                               id="email" 
                               name="Email" 
                               class="form-input" 
                               placeholder="ornek@gmail.com"
                               required>
                        <i class="fa-solid fa-envelope input-icon"></i>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="phone" class="form-label">
                            <i class="fas fa-phone"></i> Telefon
                        </label>
                        <div style="position: relative;">
                            <input type="tel" 
                                   id="phone" 
                                   name="Phone" 
                                   class="form-input" 
                                   placeholder="0532 123 45 67">
                            <i class="fas fa-phone input-icon"></i>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="birthDate" class="form-label">
                            <i class="fas fa-calendar"></i> Doğum Tarihi
                        </label>
                        <div style="position: relative;">
                            <input type="date" 
                                   id="birthDate" 
                                   name="BirthDate" 
                                   class="form-input">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="department" class="form-label">
                        <i class="fas fa-building"></i> Bölüm <span class="required">*</span>
                    </label>
                    <select id="department" name="Department" class="form-select" required>
                        <option value="">Bölüm seçiniz</option>
                        <option value="bilgisayar-muhendisligi">Bilgisayar Mühendisliği</option>
                        <option value="elektrik-elektronik">Elektrik-Elektronik Mühendisliği</option>
                        <option value="makine-muhendisligi">Makine Mühendisliği</option>
                        <option value="endustri-muhendisligi">Endüstri Mühendisliği</option>
                        <option value="isletme">İşletme</option>
                        <option value="iktisat">İktisat</option>
                        <option value="matematik">Matematik</option>
                        <option value="fizik">Fizik</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">
                        <i class="fas fa-lock"></i> Şifre <span class="required">*</span>
                    </label>
                    <div style="position: relative;">
                        <input type="password" 
                               id="password" 
                               name="Password" 
                               class="form-input" 
                               placeholder="Güçlü bir şifre oluşturun"
                               required 
                               minlength="6">
                        <button type="button" class="password-toggle" onclick="togglePassword('password', this)">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <div class="password-strength" id="passwordStrength">
                        <div class="strength-bar">
                            <div class="strength-fill"></div>
                        </div>
                        <span class="strength-text">Şifre gücü</span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="confirmPassword" class="form-label">
                        <i class="fas fa-lock"></i> Şifre Tekrar <span class="required">*</span>
                    </label>
                    <div style="position: relative;">
                        <input type="password" 
                               id="confirmPassword" 
                               name="confirmPassword" 
                               class="form-input" 
                               placeholder="Şifrenizi tekrar giriniz"
                               required 
                               minlength="6">
                        <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword', this)">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="terms-section">
                    <div class="terms-checkbox">
                        <input type="checkbox" id="termsAccepted" name="termsAccepted" required>
                        <label for="termsAccepted">
                            <a href="#" class="terms-link" onclick="showTerms()">Kullanım Koşulları</a>'nı ve 
                            <a href="#" class="terms-link" onclick="showPrivacy()">Gizlilik Politikası</a>'nı okudum, kabul ediyorum <span class="required">*</span>
                        </label>
                    </div>
                </div>

                <button type="submit" class="register-btn" id="registerBtn">
                    <i class="fas fa-user-plus"></i>
                    Üye Ol
                </button>
            </form>

            <div class="login-link">
                Zaten hesabınız var mı? <a href="/login">Giriş Yap</a>
            </div>
        </div>
    </div>

    <footer class="footer">
        <p>&copy; 2024 Mini OBS - Öğrenci Bilgi Sistemi</p>
    </footer>

    <script>
        // Otomatik ID oluşturma (sayfa yüklendiğinde)
        function generateAutoId() {
            const timestamp = Date.now();
            const random = Math.floor(Math.random() * 1000);
            const autoId = `${timestamp}${random}`.slice(-4); // Son 10 hanesi al
            document.getElementById('Id').value = autoId;
        }

        // Şifre göster/gizle
        function togglePassword(inputId, button) {
            const passwordInput = document.getElementById(inputId);
            const icon = button.querySelector('i');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        // Şifre gücü göstergesi
        document.getElementById('password').addEventListener('input', function () {
            checkPasswordStrength(this.value);
        });

        function checkPasswordStrength(password) {
            let score = 0;
            let feedback = '';
            if (password.length >= 8) score++;
            if (/[a-z]/.test(password)) score++;
            if (/[A-Z]/.test(password)) score++;
            if (/[0-9]/.test(password)) score++;
            if (/[^A-Za-z0-9]/.test(password)) score++;

            const strengthBar = document.querySelector('.strength-bar');
            const strengthText = document.querySelector('.strength-text');
            strengthBar.className = 'strength-bar';

            if (score <= 1) {
                strengthBar.classList.add('strength-weak');
                feedback = 'Zayıf şifre';
            } else if (score === 2) {
                strengthBar.classList.add('strength-fair');
                feedback = 'Orta seviye şifre';
            } else if (score === 3) {
                strengthBar.classList.add('strength-good');
                feedback = 'İyi şifre';
            } else if (score >= 4) {
                strengthBar.classList.add('strength-strong');
                feedback = 'Güçlü şifre';
            }
            strengthText.textContent = feedback;
        }

        // Kullanım koşulları ve gizlilik
        function showTerms() {
            alert('Kullanım Koşulları:\n\n1. Bu sistem eğitim amaçlı kullanılmaktadır.\n2. Kişisel bilgileriniz güvenlik altındadır.\n3. Sistem kurallarına uygun davranmak zorunludur.\n4. Hesabınızın güvenliği sizin sorumluluğunuzdadır.');
        }
        function showPrivacy() {
            alert('Gizlilik Politikası:\n\n1. Kişisel verileriniz korunmaktadır.\n2. Bilgileriniz üçüncü taraflarla paylaşılmaz.\n3. Güvenlik için şifreleriniz şifrelenerek saklanır.\n4. Hesap bilgilerinizi kimseyle paylaşmayınız.');
        }

        // Şifre eşleşme kontrolü
        document.getElementById('registerForm').addEventListener('submit', function (e) {
            var password = document.getElementById('password').value;
            var confirmPassword = document.getElementById('confirmPassword').value;
            var errorMsg = document.getElementById('errorMessage');
            errorMsg.style.display = 'none';

            if (password !== confirmPassword) {
                e.preventDefault();
                errorMsg.innerHTML = '<i class="fas fa-exclamation-triangle"></i> Şifreler eşleşmiyor!';
                errorMsg.style.display = 'block';
            }
        });

        // Sayfa açılış animasyonu
        document.addEventListener('DOMContentLoaded', function () {
            const registerContainer = document.querySelector('.register-container');
