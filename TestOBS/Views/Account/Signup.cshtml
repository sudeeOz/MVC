        <div class="floating-element">
            <i class="fas fa-user-plus" style="font-size: 4rem;"></i>
        </div>
        <div class="floating-element">
            <i class="fas fa-clipboard-list" style="font-size: 3rem;"></i>
        </div>
        <div class="floating-element">
            <i class="fas fa-graduation-cap" style="font-size: 3.5rem;"></i>
