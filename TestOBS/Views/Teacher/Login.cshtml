<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini OBS - Öğretmen Giriş</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --teacher-primary: #4ecdc4;
            --teacher-secondary: #44a08d;
            --teacher-gradient: linear-gradient(135deg, #4ecdc4, #44a08d);
            --primary-color: #667eea;
            --secondary-color: #764ba2;
            --text-dark: #2d3748;
            --text-light: #718096;
            --card-shadow: 0 15px 35px rgba(0,0,0,0.1);
            --hover-transform: translateY(-3px);
            --success-color: #48bb78;
            --error-color: #f56565;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            flex-direction: column;
            overflow-x: hidden;
        }

        .animated-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .floating-element {
            position: absolute;
            opacity: 0.1;
            animation: float 8s ease-in-out infinite;
        }

        .floating-element:nth-child(1) {
            top: 15%;
            left: 10%;
            animation-delay: 0s;
        }

        .floating-element:nth-child(2) {
            top: 60%;
            right: 15%;
            animation-delay: 3s;
        }

        .floating-element:nth-child(3) {
            top: 30%;
            left: 75%;
            animation-delay: 6s;
        }

        @@keyframes float {
            0%, 100% { 
                transform: translateY(0px) rotate(0deg); 
                opacity: 0.08;
            }
            50% { 
                transform: translateY(-30px) rotate(180deg); 
                opacity: 0.15;
            }
        }

        .container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
        }

        .back-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(255, 255, 255, 0.9);
            border: none;
            border-radius: 50px;
            padding: 12px 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            color: var(--text-dark);
            font-weight: 500;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            backdrop-filter: blur(10px);
        }

        .back-btn:hover {
            background: white;
            transform: var(--hover-transform);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .login-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border-radius: 25px;
            box-shadow: var(--card-shadow);
            padding: 3rem 2.5rem;
            max-width: 450px;
            width: 100%;
            text-align: center;
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .login-container::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: var(--teacher-gradient);
            border-radius: 25px;
            z-index: -1;
            opacity: 0.1;
            animation: borderGlow 3s ease-in-out infinite alternate;
        }

        @@keyframes borderGlow {
            0% { opacity: 0.1; }
            100% { opacity: 0.2; }
        }

        .teacher-header {
            margin-bottom: 2.5rem;
        }

        .teacher-icon {
            font-size: 4rem;
            color: var(--teacher-primary);
            margin-bottom: 1rem;
            animation: iconPulse 2s ease-in-out infinite;
        }

        @@keyframes iconPulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .teacher-title {
            font-size: 2.2rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
            background: var(--teacher-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .teacher-subtitle {
            color: var(--text-light);
            font-size: 1rem;
            font-weight: 500;
        }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
            text-align: left;
        }

        .form-label {
            display: block;
            color: var(--text-dark);
            font-weight: 600;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .form-input {
            width: 100%;
            padding: 1rem 1.2rem;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
            color: var(--text-dark);
            position: relative;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--teacher-primary);
            box-shadow: 0 0 0 3px rgba(78, 205, 196, 0.1);
            transform: translateY(-2px);
        }

        .form-input:valid {
            border-color: var(--success-color);
        }

        .input-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
            transition: color 0.3s ease;
        }

        .form-input:focus + .input-icon {
            color: var(--teacher-primary);
        }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: var(--text-light);
            font-size: 1.1rem;
            transition: color 0.3s ease;
        }

        .password-toggle:hover {
            color: var(--teacher-primary);
        }

        .login-btn {
            width: 100%;
            background: var(--teacher-gradient);
            color: white;
            border: none;
            padding: 1rem;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: 0 8px 25px rgba(78, 205, 196, 0.3);
            position: relative;
            overflow: hidden;
            margin-top: 1rem;
        }

        .login-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.6s;
        }

        .login-btn:hover::before {
            left: 100%;
        }

        .login-btn:hover {
            transform: var(--hover-transform);
            box-shadow: 0 12px 35px rgba(78, 205, 196, 0.4);
        }

        .login-btn:active {
            transform: translateY(0);
        }

        .login-btn:disabled {
            background: #cbd5e0;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .remember-section {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin: 1.5rem 0;
            font-size: 0.9rem;
        }

        .remember-checkbox {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .remember-checkbox input[type="checkbox"] {
            width: 18px;
            height: 18px;
            accent-color: var(--teacher-primary);
            cursor: pointer;
        }

        .forgot-link {
            color: var(--teacher-primary);
            text-decoration: none;
            font-weight: 500;
            transition: opacity 0.3s ease;
        }

        .forgot-link:hover {
            opacity: 0.7;
        }

        .error-message {
            background: rgba(245, 101, 101, 0.1);
            border: 1px solid rgba(245, 101, 101, 0.3);
            color: var(--error-color);
            padding: 0.8rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            font-size: 0.9rem;
            text-align: center;
            display: none;
        }

        .success-message {
            background: rgba(72, 187, 120, 0.1);
            border: 1px solid rgba(72, 187, 120, 0.3);
            color: var(--success-color);
            padding: 0.8rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            font-size: 0.9rem;
            text-align: center;
            display: none;
        }

        .security-info {
            background: rgba(78, 205, 196, 0.1);
            border: 1px solid rgba(78, 205, 196, 0.2);
            border-radius: 10px;
            padding: 1rem;
            margin-top: 1.5rem;
            font-size: 0.85rem;
            color: var(--text-light);
            text-align: center;
        }

        .security-icon {
            color: var(--teacher-primary);
            margin-right: 0.5rem;
        }

        .footer {
            text-align: center;
            padding: 20px;
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.9rem;
        }

        @@media (max-width: 768px) {
            .login-container {
                padding: 2rem 1.5rem;
                margin: 10px;
                max-width: 95%;
            }

            .teacher-title {
                font-size: 1.8rem;
            }

            .teacher-icon {
                font-size: 3rem;
            }

            .back-btn {
                top: 10px;
                left: 10px;
                padding: 10px 15px;
                font-size: 0.9rem;
            }
        }

        @@media (max-width: 480px) {
            .remember-section {
                flex-direction: column;
                gap: 1rem;
                align-items: stretch;
            }

            .form-input {
                padding: 0.9rem 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="animated-bg">
        <div class="floating-element">
            <i class="fas fa-chalkboard-teacher" style="font-size: 4rem;"></i>
        </div>
        <div class="floating-element">
            <i class="fas fa-book-open" style="font-size: 3rem;"></i>
        </div>
        <div class="floating-element">
            <i class="fas fa-graduation-cap" style="font-size: 3.5rem;"></i>
        </div>
    </div>

    <div class="container">
        <a href="javascript:history.back()" class="back-btn">
            <i class="fas fa-arrow-left"></i> Geri
        </a>

        <div class="login-container">
            <div class="teacher-header">
                <div class="teacher-icon">
                    <i class="fas fa-chalkboard-teacher"></i>
                </div>
                <h1 class="teacher-title">Öğretmen Girişi</h1>
                <p class="teacher-subtitle">Eğitim portalına erişim için giriş yapın</p>
            </div>

            <div class="error-message" id="errorMessage">
                <i class="fas fa-exclamation-triangle"></i>
                Kullanıcı adı veya şifre hatalı!
            </div>

            <div class="success-message" id="successMessage">
                <i class="fas fa-check-circle"></i>
                Giriş başarılı! Yönlendiriliyorsunuz...
            </div>

            <form id="teacherLoginForm" action="/Teacher/Login" method="POST">
                <div class="form-group">
                    <label for="teacherId" class="form-label">
                        <i class="fas fa-id-card"></i> Öğretmen ID
                    </label>
                    <div style="position: relative;">
                        <input type="text" 
                               id="teacherId" 
                               name="teacherId" 
                               class="form-input" 
                               placeholder="Öğretmen ID'nizi giriniz"
                               required 
                               autocomplete="username">
                        <i class="fas fa-id-card input-icon"></i>
                    </div>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">
                        <i class="fas fa-lock"></i> Şifre
                    </label>
                    <div style="position: relative;">
                        <input type="password" 
                               id="password" 
                               name="password" 
                               class="form-input" 
                               placeholder="Şifrenizi giriniz"
                               required 
                               autocomplete="current-password">
                        <button type="button" class="password-toggle" onclick="togglePassword()">
                            <i class="fas fa-eye" id="toggleIcon"></i>
                        </button>
                    </div>
                </div>

                <div class="remember-section">
                    <div class="remember-checkbox">
                        <input type="checkbox" id="rememberMe" name="rememberMe">
                        <label for="rememberMe">Beni hatırla</label>
                    </div>
                    <a href="#" class="forgot-link" onclick="showForgotPassword()">
                        Şifremi unuttum
                    </a>
                </div>

                <button type="submit" class="login-btn" id="loginBtn">
                    <i class="fas fa-sign-in-alt"></i>
                    Giriş Yap
                </button>
            </form>

            <div class="security-info">
                <i class="fas fa-chalkboard security-icon"></i>
                Öğretmen portalına güvenli erişim. Ders ve öğrenci bilgilerinizi yönetin.
            </div>
        </div>
    </div>

    <footer class="footer>my-2">
        <p>&copy; 2024 Mini OBS - Öğretmen Portalı</p>
    </footer>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        function showMessage(type, message) {
            const errorMsg = document.getElementById('errorMessage');
            const successMsg = document.getElementById('successMessage');
            
            errorMsg.style.display = 'none';
            successMsg.style.display = 'none';
            
            if (type === 'error') {
                errorMsg.textContent = message;
                errorMsg.style.display = 'block';
            } else if (type === 'success') {
                successMsg.textContent = message;
                successMsg.style.display = 'block';
            }
        }

        function showForgotPassword() {
            alert('Şifre sıfırlama için sistem yöneticisi ile iletişime geçiniz.\nİletişim: teacher@miniobs.edu.tr');
        }

        document.getElementById('teacherLoginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const teacherId = document.getElementById('teacherId').value.trim();
            const password = document.getElementById('password').value.trim();
            const loginBtn = document.getElementById('loginBtn');
            
            if (!teacherId || !password) {
                showMessage('error', 'Lütfen tüm alanları doldurunuz!');
                return;
            }

            if (teacherId.length < 3) {
                showMessage('error', 'Öğretmen ID en az 3 karakter olmalıdır!');
                return;
            }

            if (password.length < 6) {
                showMessage('error', 'Şifre en az 6 karakter olmalıdır!');
                return;
            }

            loginBtn.disabled = true;
            loginBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Giriş yapılıyor...';

            setTimeout(() => {
                if (teacherId === 'teacher' && password === '123456') {
                    showMessage('success', 'Giriş başarılı! Yönlendiriliyorsunuz...');
                    setTimeout(() => {
                        window.location.href = '/Teacher/Dashboard';
                    }, 2000);
                } else {
                    showMessage('error', 'Kullanıcı adı veya şifre hatalı!');
                    loginBtn.disabled = false;
                    loginBtn.innerHTML = '<i class="fas fa-sign-in-alt"></i> Giriş Yap';
                }
            }, 1500);
        });

        document.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                document.getElementById('teacherLoginForm').dispatchEvent(new Event('submit'));
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            const loginContainer = document.querySelector('.login-container');
            loginContainer.style.opacity = '0';
            loginContainer.style.transform = 'translateY(30px)';
            
            setTimeout(() => {
                loginContainer.style.transition = 'all 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
                loginContainer.style.opacity = '1';
                loginContainer.style.transform = 'translateY(0)';
            }, 200);
        });
    </script>
</body>
</html>