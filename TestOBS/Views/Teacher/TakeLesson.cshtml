        }
        
        .lesson-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
        
        .lesson-item {
            padding: 1rem;
        }
        
        .lesson-name {
            font-size: 1.1rem;
        }
        
        .register-btn {
            padding: 0.8rem 2rem;
            font-size: 1rem;
        }
    }

    @@media (max-width: 480px) {
        .page-title {
            font-size: 1.8rem;
        }
        
        .lesson-card {
            padding: 1rem;
        }
        
        .register-btn {
            width: 100%;
            padding: 1rem;
        }
    }
</style>

