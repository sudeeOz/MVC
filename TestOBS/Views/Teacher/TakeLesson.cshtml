<script>
    document.addEventListener('DOMContentLoaded', function() {
        const checkboxes = document.querySelectorAll('input[type="checkbox"][name="selectedLessons"]');
        const registerBtn = document.getElementById('registerBtn');
        const selectedCount = document.getElementById('selectedCount');
        const countText = document.getElementById('countText');
        
        function updateSelection() {
            const checkedCount = document.querySelectorAll('input[type="checkbox"][name="selectedLessons"]:checked').length;
            
            // Buton durumunu güncelle
            if (checkedCount > 0) {
                registerBtn.classList.add('active');
                selectedCount.style.display = 'inline-block';
                countText.textContent = checkedCount;
            } else {
                registerBtn.classList.remove('active');
                selectedCount.style.display = 'none';
            }
        }
        
        // Checkbox'lara event listener ekle
        checkboxes.forEach(function(checkbox) {
            checkbox.addEventListener('change', function() {
                const lessonItem = this.closest('.lesson-item');
                if (this.checked) {
                    lessonItem.classList.add('selected');
                } else {
                    lessonItem.classList.remove('selected');
                }
                updateSelection();
            });
        });
        
        // Form submit kontrolü
        document.getElementById('lessonForm').addEventListener('submit', function(e) {
            const checkedCount = document.querySelectorAll('input[type="checkbox"][name="selectedLessons"]:checked').length;
            
            if (checkedCount === 0) {
                e.preventDefault();
                alert('Lütfen en az bir ders seçiniz!');
                return false;
            }
            
            // Başarı mesajı
            if (confirm(`${checkedCount} ders kayıt yaptırılacak. Onaylıyor musunuz?`)) {
                return true;
            } else {
                e.preventDefault();
                return false;
            }
        });
    });
</script>