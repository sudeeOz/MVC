@model TestOBS.Models.Lesson

<style>
    /* Animasyonlar */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-50px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.05);
        }
        100% {
            transform: scale(1);
        }
    }

    @@keyframes shimmer {
        0% {
            background-position: -468px 0;
        }
        100% {
            background-position: 468px 0;
        }
    }

    /* Ana container */
    .lesson-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
        animation: fadeInUp 0.8s ease-out;
    }

    .lesson-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin: 1rem;
        animation: slideInLeft 1s ease-out 0.2s both;
    }

    .page-title {
        color: #2c3e50;
        font-weight: 700;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        animation: fadeInUp 1s ease-out 0.4s both;
    }

    .page-description {
        color: #5a6c7d;
        font-size: 1.2rem;
        margin-bottom: 2rem;
        animation: fadeInUp 1s ease-out 0.6s both;
    }

    .lesson-list-title {
        color: #34495e;
        font-weight: 600;
        margin-bottom: 1.5rem;
        position: relative;
        animation: fadeInUp 1s ease-out 0.8s both;
    }

    .lesson-list-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 3px;
        background: linear-gradient(90deg, #667eea, #764ba2);
        border-radius: 2px;
    }

    /* Ders listesi */
    .lesson-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .lesson-item {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border: 2px solid transparent;
        border-radius: 15px;
        padding: 1.5rem;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        position: relative;
        overflow: hidden;
        cursor: pointer;
        animation: fadeInUp 1s ease-out calc(1s + var(--delay)) both;
    }

    .lesson-item input[type="checkbox"] {
        position: absolute;
        opacity: 0;
        width: 0;
        height: 0;
    }

    .lesson-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
        transition: left 0.5s;
    }

    .lesson-item:hover::before {
        left: 100%;
    }

    .lesson-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    }

    .lesson-item.selected {
        border-color: #667eea;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(102, 126, 234, 0.3);
    }

    .lesson-item.selected .lesson-name {
        color: white;
    }

    .lesson-item.selected .lesson-department {
        color: rgba(255, 255, 255, 0.8);
    }

    .lesson-info {
        position: relative;
        z-index: 2;
        text-align: center;
    }

    .lesson-name {
        font-size: 1.3rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.8rem;
        line-height: 1.4;
    }

    .lesson-department {
        font-size: 0.9rem;
        color: #7f8c8d;
        font-style: italic;
        background: rgba(103, 126, 234, 0.1);
        padding: 0.3rem 0.8rem;
        border-radius: 15px;
        display: inline-block;
    }

    .lesson-item.selected .lesson-department {
        background: rgba(255, 255, 255, 0.2);
    }

    /* Seçim göstergesi */
    .selection-indicator {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background: #667eea;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        opacity: 0;
        transform: scale(0);
        transition: all 0.3s ease;
    }

    .lesson-item.selected .selection-indicator {
        opacity: 1;
        transform: scale(1);
    }

    /* Kayıt yaptır butonu */
    .register-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 50px;
        padding: 1rem 3rem;
        color: white;
        font-size: 1.2rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        position: relative;
        overflow: hidden;
        animation: fadeInUp 1s ease-out 1.4s both;
        opacity: 0.5;
        cursor: not-allowed;
    }

    .register-btn.active {
        opacity: 1;
        cursor: pointer;
    }

    .register-btn.active::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .register-btn.active:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 30px rgba(102, 126, 234, 0.4);
        animation: pulse 2s infinite;
    }

    .register-btn.active:hover::before {
        left: 100%;
    }

    .register-btn:active {
        transform: translateY(-1px);
    }

    /* Seçilen dersler göstergesi */
    .selected-count {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 1rem;
        display: inline-block;
        animation: fadeInUp 0.5s ease-out;
    }

    /* Responsive tasarım */
    @@media (max-width: 768px) {
        .lesson-container {
            padding: 1rem;
        }
        
        .lesson-card {
            margin: 0.5rem;
            padding: 1.5rem;
        }
        
        .page-title {
            font-size: 2rem;
        }
        
        .page-description {
