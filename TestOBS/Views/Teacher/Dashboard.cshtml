@model TestOBS.Models.Teacher


<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Öğretmen Paneli</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .welcome-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            padding: 3rem;
            margin: 2rem auto;
            max-width: 1200px;
        }

        .welcome-title {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 2rem;
            font-size: 2.2rem;
        }

        .description {
            color: #5a6c7d;
            font-size: 1.1rem;
            margin-bottom: 3rem;
            text-align: center;
        }

        .header-icon {
            font-size: 3rem;
            color: #667eea;
            margin-bottom: 1.5rem;
        }

        .action-buttons {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
            margin-top: 2rem;
            justify-items: center;
        }

        /* Form'u tam boyut yap */
        .action-buttons form {
            width: 100%;
            display: flex;
            justify-content: center;
        }

        .btn-custom {
            background: linear-gradient(145deg, #ffffff, #f8f9fa);
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 20px;
            padding: 2.5rem 2rem;
            text-decoration: none;
            color: #2c3e50;
            transition: all 0.4s ease;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 200px;
            width: 100%;
            max-width: 280px;
            position: relative;
            overflow: hidden;
            /* Form button için özel stiller */
            cursor: pointer;
        }

        .btn-custom::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
            transition: left 0.5s;
        }

        .btn-custom:hover::before {
            left: 100%;
        }

        .btn-custom:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
            text-decoration: none;
            color: #2c3e50;
            border-color: rgba(102, 126, 234, 0.3);
        }

        .btn-custom i {
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }

        .btn-custom:hover i {
            transform: scale(1.1);
        }

        .btn-custom span {
            font-weight: 600;
            font-size: 1rem;
            text-align: center;
            line-height: 1.3;
            letter-spacing: 0.5px;
        }

        .teacher-icon {
            color: #e74c3c;
        }

        .student-icon {
            color: #27ae60;
        }

        .lesson-icon {
            color: #f39c12;
        }

        .btn-custom:hover .teacher-icon {
            color: #c0392b;
        }

        .btn-custom:hover .student-icon {
            color: #229954;
        }

        .btn-custom:hover .lesson-icon {
            color: #e67e22;
        }

        .divider {
            width: 60px;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            margin: 2rem auto;
            border-radius: 2px;
        }

        @@media (max-width: 992px) {
            .action-buttons {
                grid-template-columns: repeat(2, 1fr);
                gap: 1.5rem;
            }

            .btn-custom:last-child {
                grid-column: span 2;
                max-width: 280px;
                margin: 0 auto;
            }

            .action-buttons form:last-child {
                grid-column: span 2;
                display: flex;
                justify-content: center;
            }
        }

        @@media (max-width: 768px) {
            .welcome-container {
                margin: 1rem;
                padding: 2rem;
            }

            .action-buttons {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }

            .btn-custom:last-child {
                grid-column: span 1;
            }

            .action-buttons form:last-child {
                grid-column: span 1;
            }

            .btn-custom {
                padding: 2rem 1.5rem;
                min-height: 180px;
            }

            .welcome-title {
                font-size: 1.8rem;
            }
        }

        @@media (max-width: 576px) {
            .welcome-container {
                padding: 1.5rem;
            }

            .btn-custom {
                min-height: 160px;
                padding: 1.5rem 1rem;
            }

            .btn-custom i {
                font-size: 1.8rem;
            }

            .btn-custom span {
                font-size: 0.9rem;
            }
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="welcome-container">
            <!-- Header Icon -->
            <div class="text-center">
                <i class="fas fa-chalkboard-teacher header-icon"></i>
            </div>
             <a href="#" class="logout-btn" >
                    <form asp-action="Login" asp-controller="Account" method="post">
                        <button type="submit" class="btn btn-link">Çıkış Yap</button>
                    </form>
                </a>

            <!-- Welcome Message -->
            <h1 class="welcome-title text-center">
                Sayın @Model.FirstName Öğretmen Paneline Hoş Geldiniz
            </h1>

            <div class="divider"></div>

            <p class="description">
                <i class="fas fa-info-circle me-2"></i>
                Bu panelde öğretmenlerle ilgili tüm işlemlerinizi güvenli ve kolay bir şekilde gerçekleştirebilirsiniz.
            </p>

            <div class="action-buttons">
                <form asp-action="Profile" asp-controller="Teacher" method="get" style="margin: 0;">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn-custom" style="border: none; background: none;">
                        <i class="fas fa-chalkboard-teacher fa-3x teacher-icon"></i>
                        <span>Profilini<br>İncele</span>
                    </button>
                </form>


                <a class="btn btn-custom" asp-action="TakeLesson" asp-route-id="@Model.Id">
                    <i class="fas fa-book-open fa-3x lesson-icon"></i>
                    <span>Yeni Ders<br>Ekle</span>
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>

</html>